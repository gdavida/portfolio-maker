<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Brief</th>
      <th>Description</th>
      <th>Github repo</th>
      <th>Demo site url</th>
      <th>Languages used</th>
      <th>Other features</th>
      <th>Project image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.brief %></td>
        <td><%= project.description %></td>
        <td><%= project.github_repo %></td>
        <td><%= project.demo_site_url %></td>
        <td><%= project.languages_used %></td>
        <td><%= project.other_features %></td>
        <td><%= project.project_image_url %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

